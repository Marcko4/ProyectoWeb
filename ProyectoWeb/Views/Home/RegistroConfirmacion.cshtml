@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Registro Exitoso</title>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 320px;
            text-align: center;
        }

        .btn {
            width: 100%;
            padding: 10px;
            background-color: #e54725;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 15px;
        }

            .btn:hover {
                background-color: #d43f1b;
            }

        img {
            width: 100%;
            margin-bottom: 10px;
        }
    </style>
</head>
<body style="background-image: url('/images/fondologin.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat;">

    <div class="login-container">
        <img src="/images/LoginUser.png" alt="Logo Confirmación">
        <h2>¡Registro exitoso!</h2>
        <p>Hola <strong>@ViewData["Nombre"]</strong>, tu número de cliente es:</p>
        <h3 style="color: #e54725;">@ViewData["NumeroCliente"]</h3>

        <form action="/Home/Login" method="get">
            <button type="submit" class="btn">Volver al Login</button>
        </form>
    </div>

</body>
</html>
