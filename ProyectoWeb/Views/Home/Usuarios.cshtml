@model List<ProyectoWeb.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <header>
        <h1 style="text-align: center; background-color: peachpuff; color: black; padding: 20px;">Sistema de Gestión de Biblioteca</h1>
        <nav style="text-align: center;">
            <a asp-controller="Home" asp-action="Inicio" style="margin: 0 15px; text-decoration: none; font-weight: bold; color: darkseagreen;">Inicio</a>
            <a asp-controller="Home" asp-action="Usuarios" style="margin: 0 15px; text-decoration: none; font-weight: bold; color: darkseagreen;">Usuarios</a>
        </nav>
    </header>

    <main style="max-width: 900px; margin: 20px auto; padding: 20px;">
        <h2>Lista de Usuarios</h2>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Numero Cliente</th>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                        <tr>
                            <td>@usuario.NumeroCliente</td>
                            <td>@usuario.Cedula</td>
                            <td>@usuario.Nombre</td>
                            <td>@usuario.Email</td>
                            <td>@usuario.Telefono</td>
                            <td>@usuario.Direccion</td>
                        </tr>
                }
            </tbody>
        </table>
    </main>

    <footer style="text-align: center; background-color: darkseagreen; color: black; padding: 10px;">
        <p>Grupo: 5 | Carrera: Ingeniería en Informática</p>
    </footer>

</body>
</html>
